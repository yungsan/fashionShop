div(class='modal flex flex-wrap items-end justify-between w-full h-fit p-8 hidden')#product
  if products
    each product in products
      div(class='w-[21%] h-fit text-center shadow-sm py-1 px-3 border-2')
        a(href=`/products/detail/${product._id}`) 
          img(src=product.thumbnail, class="w-full")
          p(class='truncate')=product.name
        div(class='w-full flex justify-between items-center')
          div(class='w-1/2')
            a(href=`/products/edit/${product._id}` class='p-2 my-3 rounded-lg text-white')
              svg(class='h-6 w-6 m-auto text-blogblue hover:text-blogblue' xmlns='http://www.w3.org/2000/svg' fill='none' viewbox='0 0 24 24' stroke='currentColor' stroke-width='2')
                path(stroke-linecap='round' stroke-linejoin='round' d='M11 5H6a2 2 0 00-2 2v11a2 2 0 002 2h11a2 2 0 002-2v-5m-1.414-9.414a2 2 0 112.828 2.828L11.828 15H9v-2.828l8.586-8.586z')
          div(class='w-1/2')
            form(action="/products?_method=DELETE", method="POST") 
              input(type="text" class='w-full hidden' name='id' value=product._id)
              button(class='p-2 my-3 rounded-lg text-white')
                svg(class='h-6 w-6 m-auto text-red-500 hover:text-red-600' xmlns='http://www.w3.org/2000/svg' viewbox='0 0 20 20' fill='currentColor')
                  path(fill-rule='evenodd' d='M9 2a1 1 0 00-.894.553L7.382 4H4a1 1 0 000 2v10a2 2 0 002 2h8a2 2 0 002-2V6a1 1 0 100-2h-3.382l-.724-1.447A1 1 0 0011 2H9zM7 8a1 1 0 012 0v6a1 1 0 11-2 0V8zm5-1a1 1 0 00-1 1v6a1 1 0 102 0V8a1 1 0 00-1-1z' clip-rule='evenodd')



        

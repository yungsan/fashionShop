extends ../layout.pug
block content 
  section(class="w-full mx-0 mt-20 px-32 py-8 pb-20 flex flex-wrap items-end justify-between bg-gray-200 font-bold shadow-lg")
    div(class='flex w-full h-fit bg-white rounded-tl-3xl rounded-bl-3xl' id='profileSidebar')
      div(class='w-1/5 text-white bg-blogblue rounded-tl-3xl rounded-bl-3xl py-20 pl-10')
        div(data="profile" class='activeProfileNav opacity-60 font-normal mb-8 w-full block cursor-pointer sidebarItem')
          span(class='w-full flex items-end')
            svg.h-6.w-6(xmlns='http://www.w3.org/2000/svg' viewbox='0 0 20 20' fill='currentColor')
              path(fill-rule='evenodd' d='M10 9a3 3 0 100-6 3 3 0 000 6zm-7 9a7 7 0 1114 0H3z' clip-rule='evenodd')
            span(class='text-xl leading-4 px-5') Profile
        div(data="product" class='opacity-60 font-normal mb-8 w-full cursor-pointer')
          span(class='w-full flex items-end')
            svg.h-5.w-5(xmlns='http://www.w3.org/2000/svg' viewbox='0 0 20 20' fill='currentColor')
              path(d='M7 3a1 1 0 000 2h6a1 1 0 100-2H7zM4 7a1 1 0 011-1h10a1 1 0 110 2H5a1 1 0 01-1-1zM2 11a2 2 0 012-2h12a2 2 0 012 2v4a2 2 0 01-2 2H4a2 2 0 01-2-2v-4z')
            span(class='text-xl leading-4 px-5') Products
        div(data="#" class='opacity-60 font-normal mb-8 w-full block cursor-pointer sidebarItem')
          span(class='w-full flex items-end')
            svg.h-6.w-6(xmlns='http://www.w3.org/2000/svg' viewbox='0 0 20 20' fill='currentColor')
              path(fill-rule='evenodd' d='M10 2a4 4 0 00-4 4v1H5a1 1 0 00-.994.89l-1 9A1 1 0 004 18h12a1 1 0 00.994-1.11l-1-9A1 1 0 0015 7h-1V6a4 4 0 00-4-4zm2 5V6a2 2 0 10-4 0v1h4zm-6 3a1 1 0 112 0 1 1 0 01-2 0zm7-1a1 1 0 100 2 1 1 0 000-2z' clip-rule='evenodd')
            span(class='text-xl leading-4 px-5') Orders
        div(data="#" class='opacity-60 font-normal mb-8 w-full block cursor-pointer sidebarItem')
          span(class='w-full flex items-end')
            svg.h-6.w-6(xmlns='http://www.w3.org/2000/svg' viewbox='0 0 20 20' fill='currentColor')
              path(d='M5 4a2 2 0 012-2h6a2 2 0 012 2v14l-5-2.5L5 18V4z')
            span(class='text-xl leading-4 px-5') Bookmark
        div(data="setting" class='opacity-60 font-normal mb-8 w-full block cursor-pointer sidebarItem')
          span(class='w-full flex items-end')
            svg.h-6.w-6(xmlns='http://www.w3.org/2000/svg' viewbox='0 0 20 20' fill='currentColor')
              path(fill-rule='evenodd' d='M11.49 3.17c-.38-1.56-2.6-1.56-2.98 0a1.532 1.532 0 01-2.286.948c-1.372-.836-2.942.734-2.106 2.106.54.886.061 2.042-.947 2.287-1.561.379-1.561 2.6 0 2.978a1.532 1.532 0 01.947 2.287c-.836 1.372.734 2.942 2.106 2.106a1.532 1.532 0 012.287.947c.379 1.561 2.6 1.561 2.978 0a1.533 1.533 0 012.287-.947c1.372.836 2.942-.734 2.106-2.106a1.533 1.533 0 01.947-2.287c1.561-.379 1.561-2.6 0-2.978a1.532 1.532 0 01-.947-2.287c.836-1.372-.734-2.942-2.106-2.106a1.532 1.532 0 01-2.287-.947zM10 13a3 3 0 100-6 3 3 0 000 6z' clip-rule='evenodd')
            span(class='text-xl leading-4 px-5') Setting
        form(action="/account", method="POST") 
          button(type="submit" class='opacity-60 font-normal mb-8 w-full block')
            span(class='w-full flex items-end')
              svg.h-6.w-6(xmlns='http://www.w3.org/2000/svg' fill='none' viewbox='0 0 24 24' stroke='currentColor' stroke-width='2')
                path(stroke-linecap='round' stroke-linejoin='round' d='M17 16l4-4m0 0l-4-4m4 4H7m6 4v1a3 3 0 01-3 3H6a3 3 0 01-3-3V7a3 3 0 013-3h4a3 3 0 013 3v1')
              span(class='text-xl leading-4 px-5') Logout
      div(class='w-4/5 relative rounded-tr-3xl rounded-br-3xl pb-10 overflow-scroll')
        div(class='w-full bg-white shadow-md h-[15%] rounded-tr-3xl flex items-center px-10 font-bodybold')
          div(class='w-1/4') My Profile
          div(class='w-3/4 flex justify-end items-center')
            a(href="#" class='opacity-50')
              svg.h-5.w-5(xmlns='http://www.w3.org/2000/svg' viewbox='0 0 20 20' fill='currentColor')
                path(d='M10 2a6 6 0 00-6 6v3.586l-.707.707A1 1 0 004 14h12a1 1 0 00.707-1.707L16 11.586V8a6 6 0 00-6-6zM10 18a3 3 0 01-3-3h6a3 3 0 01-3 3z')
            a(href="#" class='w-[50px] h-[50px] mx-3')
              img(src=user.avatar, class="w-full h-full object-cover rounded-[50%] border-2")
            a(href="#" class='opacity-50')
              svg.h-5.w-5(xmlns='http://www.w3.org/2000/svg' viewbox='0 0 20 20' fill='currentColor')
                path(fill-rule='evenodd' d='M5.293 7.293a1 1 0 011.414 0L10 10.586l3.293-3.293a1 1 0 111.414 1.414l-4 4a1 1 0 01-1.414 0l-4-4a1 1 0 010-1.414z' clip-rule='evenodd')
        include editProfile
        include setting
        include productsList

  script(src="/js/modal.js")
  script(src="/js/userAvatar.js") 
  script(src="/js/onChangeThumbnail.js") 
  script(src="/js/inputChecking.js")
  script(src="/js/deleteWarning.js") 
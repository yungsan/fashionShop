div(class='modal flex flex-wrap w-full h-fit p-8')#profile
  div(class='w-1/4 border-r-2 border-solid')
    a(href="#" class='active mb-8 w-full block shadow-sm py-2 text-blogblue')
      span(class='w-full flex items-end')
        svg.h-7.w-7(xmlns='http://www.w3.org/2000/svg' viewbox='0 0 20 20' fill='currentColor')
          path(d='M17.414 2.586a2 2 0 00-2.828 0L7 10.172V13h2.828l7.586-7.586a2 2 0 000-2.828z')
          path(fill-rule='evenodd' d='M2 6a2 2 0 012-2h4a1 1 0 010 2H4v10h10v-4a1 1 0 112 0v4a2 2 0 01-2 2H4a2 2 0 01-2-2V6z' clip-rule='evenodd')
        span(class='text-lg leading-6 px-3') Edit Profile
        svg.h-7.w-7(xmlns='http://www.w3.org/2000/svg' viewbox='0 0 20 20' fill='currentColor')
          path(fill-rule='evenodd' d='M7.293 14.707a1 1 0 010-1.414L10.586 10 7.293 6.707a1 1 0 011.414-1.414l4 4a1 1 0 010 1.414l-4 4a1 1 0 01-1.414 0z' clip-rule='evenodd')
    a(href="#" class='active mb-8 w-full block opacity-60 py-2')
      span(class='w-full flex items-end')
        svg.h-5.w-5(xmlns='http://www.w3.org/2000/svg' viewbox='0 0 20 20' fill='currentColor')
          path(d='M10 2a6 6 0 00-6 6v3.586l-.707.707A1 1 0 004 14h12a1 1 0 00.707-1.707L16 11.586V8a6 6 0 00-6-6zM10 18a3 3 0 01-3-3h6a3 3 0 01-3 3z')
        span(class='text-lg leading-6 px-3') Notification
    a(href="#" class='active mb-8 w-full block opacity-60 py-2')
      span(class='w-full flex items-end')
        svg.h-5.w-5(xmlns='http://www.w3.org/2000/svg' viewbox='0 0 20 20' fill='currentColor')
          path(fill-rule='evenodd' d='M2.166 4.999A11.954 11.954 0 0010 1.944 11.954 11.954 0 0017.834 5c.11.65.166 1.32.166 2.001 0 5.225-3.34 9.67-8 11.317C5.34 16.67 2 12.225 2 7c0-.682.057-1.35.166-2.001zm11.541 3.708a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z' clip-rule='evenodd')
        span(class='text-lg leading-6 px-3') Security
  div(class='w-3/4 h-fit pt-10 pb-20 px-20')
    form(action=`/account/${user._id}?_method=PUT` enctype="multipart/form-data" method="POST") 
      div(class='w-full')
        div(class='overflow-hidden')
          img(src=user.avatar, class="m-auto w-[150px] h-[150px] border-2 rounded-full object-cover object-center cursor-pointer hover:opacity-80" id='productThumbnail')
        input(type="file", name="avatar" value=user.avatar class='hidden' id='productThumbnailFile')
      div(class='wrap mb-3')
        p(class='opacity-80 text-lg font-medium mb-3') Username:
        input(type='text' name='username' value=user.username class='border-2 p-name mx-1 text-sm p-2 w-full')
      div(class='wrap mb-3')
        p(class='opacity-80 text-lg font-medium mb-3') Email:
        input(type='email' name='email' value=user.email class='border-2 p-name mx-1 text-sm p-2 w-full')
      div(class='wrap mb-3')
        button(type='submit' id='btn' class='bg-blogblue text-white p-2 mt-5 rounded-lg float-right') Update Profile